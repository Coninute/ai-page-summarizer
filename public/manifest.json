{
  "manifest_version": 3,
  "name": "网页内容总结助手",
  "version": "1.0.0",
  "description": "一键总结当前网页内容并导出为 Markdown 文件",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://api-inference.modelscope.cn/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {}
}
